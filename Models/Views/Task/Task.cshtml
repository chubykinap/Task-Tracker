@{
    Layout = "~/Views/Layout/_Layout.cshtml";
}

@{
    ViewBag.Title = "Таск-трекер";
}

<form action="/Task/AddTask" method="get">
    <h2>@ViewBag.Task.Name</h2>
    <p>Описание<br>@ViewBag.Task.Description</p>
    <p>Статус<br>@ViewBag.Task.Status</p>
    <p>
        Срок<br>
        @ViewBag.Task.Shedule
    </p>
    <input type="submit" name="change" value="Изменить данные" />
</form>
<form action="/Task/CompleteTask" method="post">
    <input type="submit" name="remove" value="Выполнить задачу" />
</form>
